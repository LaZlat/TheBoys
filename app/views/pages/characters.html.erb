<div class="black-background">
    <h2 class="title">The Boys</h2>
    <div class="content-wrapper flex-center">
        <% chars.each do |c| %>
        <div class="character-wrapper flex-center">
            <div class="character-item flex-center">
                <img src=<%= c.image %> alt="">
                <div class="character-name-container flex-center">
                    <p><%= c.name %></p>
                </div>
            </div>
            <div class="character-item flex-center">
                <p class="description"><%= c.description %></p>
            </div>
        </div>
        <% end %>
    </div>
</div>



